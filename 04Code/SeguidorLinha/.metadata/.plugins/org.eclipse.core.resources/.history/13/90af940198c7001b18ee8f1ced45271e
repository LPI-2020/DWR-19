
void test_move(float speed)
{
	  // test FORWARD movement
	  move_forward(0.7);
	  HAL_Delay(5000);
	  move_stop();

	  // test BACKWARDS movement
	  move_backwards(0.7);
	  HAL_Delay(5000);
	  move_stop();

	  // test rotate RIGHT
	  move_rotate(MOVE_RIGHT, 0.7);
	  HAL_Delay(5000);
	  move_stop();

	  // test rotate LEFT
	  move_rotate(MOVE_LEFT, 0.7);
	  HAL_Delay(5000);
	  move_stop();
}
