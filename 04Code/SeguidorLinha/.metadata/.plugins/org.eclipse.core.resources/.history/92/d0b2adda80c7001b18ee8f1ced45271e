#define __PID_H__

/******************************************************************************
PID constants
******************************************************************************/
#define a_pid 	(float) (0.3)

// saturation limits
//#define U_SAT_A (float) (1.0)	// saturation limit above
//#define U_SAT_B (float) (-1.0)	// saturation limit bellow

/******************************************************************************
PID struct
******************************************************************************/
//typedef struct
//{
