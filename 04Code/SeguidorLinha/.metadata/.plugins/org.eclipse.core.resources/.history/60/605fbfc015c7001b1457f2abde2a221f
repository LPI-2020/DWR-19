#include "auxiliares.h"

#define


void sliding_window(float val, float* window, uint8_t w_size)
{
	for(uint8_t i = (w_size - 1); i > 1; i--)
		window[i] = window[i - 1];

	window[1] = val;
}

float mean_window(float* window, uint8_t w_size)
{
	float sum = 0;

	for(uint8_t i = (w_size - 1); i > 1; i--)
	{
		sum += window[i];
		window[i] = window[i - 1];
	}

	window[0] = val;
	sum += val;

	return (sum / w_size);
}
